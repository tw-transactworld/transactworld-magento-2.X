<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="transactworld" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>TransactWorld</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <!-- <field id="account_type" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Account Type</label>
                    <source_model>PaymentzPayment\Paymentz\Model\Account</source_model>
                    <config_path>payment/paymentz/account_type</config_path>
                </field> -->
                <field id="title" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
				
				<field id="merchant_key" translate="label" type="text" sortOrder="52" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Merchant Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
				
				<field id="toid" translate="label" type="text" sortOrder="52" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Toid</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
				
				<field id="totype" translate="label" type="text" sortOrder="52" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Totype</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
				
				<field id="sandbox_url" translate="label" type="text" sortOrder="52" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Test Url</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
				
				<field id="production_url" translate="label" type="text" sortOrder="52" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Live Url</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
				
                <field id="environment" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Environment</label>
                    <source_model>TransactworldPayment\Transactworld\Model\Environment</source_model>
                    <config_path>payment/transactworld/environment</config_path>
                </field>
                
                <!-- <field id="salt" translate="label" type="obscure" sortOrder="53" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Salt Key</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field> -->
            </group>
        </section>
    </system>
</config>
